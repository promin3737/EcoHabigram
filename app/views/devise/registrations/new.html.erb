<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <div class="logo">
            <h2>EcoHabigram</h2>
            <p class="text-secondary">エコハビメンバーの写真や動画をチェックしよう</p>
          </div>
          <%= form_with model: User.new, url: new_user_session_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, placeholder: "25th 真田隼輔", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録", class: "btn btn-primary w-100" %>
            </div>
            <% end %>

            <br>

            <p class="devise-link">
              ユーザー登録が済んでいる方は
              <%= link_to "ログイン", new_user_session_path %>
            </p>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
